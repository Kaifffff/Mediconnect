package com.kaif.mediConnect.Dao;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.kaif.mediConnect.Model.Appointment;
import com.kaif.mediConnect.Model.Payment;
import com.kaif.mediConnect.Repo.AppointmentRepo;
import com.kaif.mediConnect.Repo.PaymentRepo;
import com.kaif.mediConnect.Service.PaymentService;

@Service
public class PaymentDao implements PaymentService {
	
	@Autowired
	PaymentRepo pr;
	
	@Autowired
	AppointmentRepo ar;

	@Override
	public List<Payment> getAllPayments() {
	
		return pr.findAll();
	}

	@Override
	public Payment addPayment(Long appointmentId, Payment payment) {
	    Appointment appointment = ar.findById(appointmentId)
	        .orElseThrow(() -> new RuntimeException("Appointment not found"));
	    payment.setAppointment(appointment);
	    payment.setStatus("Successful"); // Example logic
	    return pr.save(payment);
	}

	@Override
	public String deletePayment(Long id) {
		pr.deleteById(id);
		return "deleted";
	}

	@Override
	public String deleteAllPayments() {
		// TODO Auto-generated method stub
		return null;
	}

}
